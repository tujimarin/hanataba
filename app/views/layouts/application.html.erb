<!DOCTYPE html>
<html>
<head>
  <title>HANATABA <%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% unless yield(:title).empty? %>

  <h1><%= link_to "HANATABA", root_path %></h1>

  <header>
    <ul>
      <% if logged_in? %>
        <li><%= link_to "花を選ぶ", new_cart_item_path %></li>
        <li>
          <%= link_to "マイページ", current_user %>
          <ul>
            <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            <li><%= link_to "カート", cart_items_path %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "新規登録", new_user_path %></li>
      <% end %>
    </ul>
  </header>

<% end %>

<p id="notice"><%= notice %></p>

<%= yield %>

</body>
</html>
