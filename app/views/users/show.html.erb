<% provide(:title, ' 登録情報 ') %>
<h2>発注中の商品</h2>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th>商品説明</th>
      <th>発注数</th>
      <th>発注日</th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |ci| %>
      <tr>
        <td><%= @items.find(ci.item_id).name %></td>
        <td><%= @items.find(ci.item_id).price %></td>
        <td><%= @items.find(ci.item_id).comment %></td>
        <td><%= ci.amount %></td>
        <td><%= ci.change_status_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>登録情報</h2>

<p>
  <strong>氏名:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>郵便番号:</strong>
  <%= @user.postal_code %>
</p>

<p>
  <strong>住所:</strong>
  <%= @user.address %>
</p>

<p>
  <strong>クレジットカード情報:</strong>
  <%= @user.credit_card %>
</p>

<p>
  <strong>電話番号:</strong>
  <%= @user.tel %>
</p>

<p>
  <strong>メールアドレス:</strong>
  <%= @user.email %>
</p>

<%= button_to '登録情報を編集する', edit_user_path(@user), method: :get %>

