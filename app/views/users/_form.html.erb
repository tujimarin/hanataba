  <% end %>
<table class="user_table">
  <tr>
    <th><%= f.label :name, "名前" %></th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th><%= f.label :postal_code, "郵便番号" %></th>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th><%= f.label :address, "住所" %></th>
    <td><%= f.text_area :address %></td>
  </tr>
  <tr>
    <th><%= f.label :credit_card, "クレジットカード情報" %></th>
    <td><%= f.text_field :credit_card %></td>
  </tr>
  <tr>
    <th><%= f.label :tel, "電話番号" %></th>
    <td><%= f.telephone_field :tel %></td>
  </tr>
  <tr>
    <th><%= f.label :email, "メールアドレス" %></th>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <th><%= f.label :password, "パスワード" %></th>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <th><%= f.label :password_confirmation, "パスワード再入力" %></th>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
</table>
  <div class="actions">
    <%= f.submit "登録" %>
