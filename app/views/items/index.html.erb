<p id="notice"><%= notice %></p>

<h1>商品一覧</h1>

<ul>
  <li><%= link_to "戻る", users_path %></li>
  <li>
    <%= link_to "マイページ", edit_user_path if @login == true%>
    <%= link_to "マイページ", new_user_path if @login.nil? %>
  </li>
  <ul>
    <li><%= link_to "カート", user_items_path %></li>
  </ul>
</ul>

<p><%= link_to "買い物かごに入れる", user_items_path %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Comment</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.comment %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
