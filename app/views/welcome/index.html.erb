<% provide(:title, '') %>


<header id="mainImg">

  <%= image_tag 'common/site_title_img.png',class: 'title_img' %>
  <%= image_tag 'common/main_content_img.jpg',class: 'main_img' %>

  <%= form_for(:session, url: sessions_path, html: {id: :login_form}) do |f| %>
    <% if logged_in? %>
      <p>ようこそ<%= current_user.name %>さん</p>
      <%= link_to "マイページ", current_user ,class: :buttons %>
      <%= link_to "ログアウト", logout_path , method: :delete,class: :buttons %>
    <% else %>
      <div class="field">
      <%= f.label :tel, "電話番号" %>
      <%= f.telephone_field :tel %>
      </div>
      <div class="field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password %>
      </div>
      <%= f.submit "ログイン" %>
      <%= link_to "新規登録はこちら", new_user_path %>
    <% end %>
  <% end %>

</header>
